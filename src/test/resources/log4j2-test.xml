<?xml version="1.0" encoding="UTF-8"?>
<!-- This file just provide a basic fallback configuration -->
<!-- The actual configuration is performed at runtime programmatically in the Log4J class -->
<Configuration name="Basic" status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%-5p %c{1} - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
